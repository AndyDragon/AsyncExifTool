<?xml version="1.0" encoding="utf-8"?>
<Project>

  <!-- Package sources. -->
  <PropertyGroup>
    <RestoreSources>
      $(RestoreSources);
      https://api.nuget.org/v3/index.json
    </RestoreSources>
  </PropertyGroup>


  <!--Include in every project -->
  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2019.1.3" PrivateAssets="all" />
  </ItemGroup>

  <!--Need to be opted in -->
  <ItemGroup>

    <!--Dependencies production code (and maybe also in test code)-->
    <PackageReference Update="MedallionShell" Version="1.6.1" />
    <PackageReference Update="Nito.AsyncEx" Version="5.0.0" />

    <!-- Versioning -->
    <PackageReference Update="GitVersionTask" Version="5.1.3" />

    <!--Analyzers -->
    <PackageReference Update="StyleCop.Analyzers" Version="1.1.118" />

    <!--Required in test project -->
    <PackageReference Update="CoenM.Encoding.Z85e" Version="1.2.1" />
    <PackageReference Update="Microsoft.NET.Test.Sdk" Version="16.4.0" />

    <!-- xunit -->
    <PackageReference Update="xunit" Version="2.4.1" />
    <PackageReference Update="xunit.analyzers" Version="0.10.0" />
    <PackageReference Update="xunit.categories" Version="2.0.4" />
    <PackageReference Update="xunit.runner.console" Version="2.4.1" />
    <PackageReference Update="xunit.runner.reporters" Version="2.4.1" />
    <PackageReference Update="xunit.runner.visualstudio" Version="2.4.1" />

    <!--Unittesting-->
    <PackageReference Update="FakeItEasy" Version="5.5.0" />
    <PackageReference Update="FakeItEasy.Analyzer.CSharp" Version="5.3.0" />
    <PackageReference Update="FluentAssertions" Version="5.10.0" />
    <PackageReference Update="FluentAssertions.Analyzers" Version="0.11.4" />

    <!--Test coverage -->
    <PackageReference Update="coverlet.msbuild" Version="2.8.0" />
    <PackageReference Update="coverlet.collector" Version="1.2.0" />

  </ItemGroup>

</Project>